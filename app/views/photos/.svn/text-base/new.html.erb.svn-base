<div class="scaffold">

<% if current_user %>
<h2>New photo</h2>

<% form_for(@photo) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :url_full %><br />
    <%= f.text_field :url_full %>
  </p>
  <p>
    <%= f.label :url_thumbnail %><br />
    <%= f.text_field :url_thumbnail %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>
<% else %>
<p class='advise'>
    You must be logged in to add a photo.
</p>
<% end %>
<%= link_to 'Back', photos_path %>
</div>