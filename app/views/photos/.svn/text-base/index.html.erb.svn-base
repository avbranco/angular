<div class="scaffold">

<% if current_user %>
<h2>Photos</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Url full</th>
    <th>Url thumbnail</th>
  </tr>

<% for photo in @photos %>
  <tr>
    <td><%=h photo.title %></td>
    <td><%=h photo.description %></td>
    <td><%=h photo.url_full %></td>
    <td><%=h photo.url_thumbnail %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New photo', new_photo_path %>
<% else %>
<p class='advise'>
    You must be logged in to view the photos.
</p>
<% end %>
<%= link_to 'Back', photos_path %>

</div>