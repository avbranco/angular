#myGallery {
    text-align: left;
    margin: 0 auto;
}

.footer {
    text-align: center;
}

a {
	color: #fff;	
}
a:visited {
    text-decoration: none;
	font-weight: normal;
}

.scaffold {
	padding: 0px 50px 50px 50px;
	font-family: "Trebuchet MS", "Lucida Grande", Arial, Helvetica, sans-serif;
	font-size: small;
}

.scaffold table { 
	padding: 0px; 
	border: none; 
}

.scaffold table td { 
	font-size: small; 
	border: none; 
	padding: 7px; 
	border: 1px;
}

